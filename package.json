{
  "name": "sddz-framework",
  "version": "0.0.1",
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "bootstrap:yarn": "lerna bootstrap --npm-client=yarn",
    "bootstrap:lerna": "lerna bootstrap",
    "bootstrap": "npm-run-all clear-all bootstrap:lerna",
    "start": "vue-cli-service serve",
    "build": "lerna run build",
    "build:parallel": "lerna run build --parallel",
    "build:app": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "clear-all": "rimraf package-lock.json packages/*/node_modules packages/*/package-lock.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release:lerna": "lerna version --exact --force-publish --no-git-tag-version",
    "release:beta": "lerna publish --force-publish=* --exact --skip-temp-tag  --preid=beta --npm-tag=beta",
    "publish": "lerna publish",
    "release": "npm-run-all build release:lerna publish && npm run changelog"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "d3": "^5.16.0",
    "d3-brush": "^1.1.5",
    "element-ui": "^2.13.2",
    "lodash": "^4.17.19",
    "vis-timeline": "^7.3.7",
    "vue": "^2.6.11",
    "vue-json-schema-editor-visual": "^0.2.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@vue/cli-plugin-babel": "~4.4.0",
    "@vue/cli-plugin-eslint": "~4.4.0",
    "@vue/cli-service": "~4.4.0",
    "babel-eslint": "^10.1.0",
    "brace": "^0.11.1",
    "codemirror": "^5.56.0",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "highlight.js": "^10.1.1",
    "jsonlint": "^1.6.3",
    "lerna": "^3.22.1",
    "node-sass": "^4.14.1",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass-loader": "^9.0.2",
    "script-loader": "^0.7.2",
    "vue-router": "^3.3.4",
    "vue-template-compiler": "^2.6.11",
    "vue2x-ace-editor": "^0.1.3",
    "webpack": "^4.44.0"
  },
  "engines": {
    "node": "14.15.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
